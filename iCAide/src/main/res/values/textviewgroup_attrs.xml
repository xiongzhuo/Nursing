<resources>
<!-- 自定义 textview——group控件属性 -->
    <declare-styleable name="TextViewGroup">
        <attr name="viewgroup_textSize" format="dimension" />
        <attr name="viewgroup_itemmargin" format="dimension" />
        <attr name="viewgroup_linemargin" format="dimension" />
        <attr name="viewgroup_itempadding" format="dimension" />
        <attr name="viewgroup_textBackground" format="reference" />
        <attr name="viewgroup_textColor" format="color" />
        <attr name="viewgroup_textBackground_s" format="reference" />
        <attr name="viewgroup_textColor_s" format="color" />
        <attr name="viewgroup_columnNum" format="integer" />
        <attr name="viewgroup_overspread" format="boolean" />
        <attr name="viewgroup_shape">
            <enum name="square" value="0" />
            <enum name="rectangle" value="1" />
            <enum name="rectangle_half" value="2" />
            <enum name="rectangle_third" value="3" />
        </attr>
        <attr name="viewgroup_select">
            <enum name="radio" value="0" />
            <enum name="multiple" value="1" />
            <enum name="radio_empty" value="2" />
        </attr>
    </declare-styleable>
