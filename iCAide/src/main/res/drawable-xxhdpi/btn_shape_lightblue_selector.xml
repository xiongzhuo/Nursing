<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:insetLeft="1.0px" android:insetRight="1.0px">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#62aafc"></solid>
            <corners android:radius="8dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#2665b3" />
            <corners android:radius="8dip" />
        </shape>
    </item>
</selector>