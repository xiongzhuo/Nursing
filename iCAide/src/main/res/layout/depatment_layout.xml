<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="#fca258" />

    <RelativeLayout
        android:id="@+id/titleView"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="选科室(可多选)"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/devider" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/allDepartTv"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@color/listselect"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="全部" />

            <ListView
                android:id="@+id/poplist"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/main_bg"
                android:divider="@color/list_divider"
                android:listSelector="@drawable/listselect_btn"
                android:scrollbars="@null" >
            </ListView>
        </LinearLayout>

        <ListView
            android:id="@+id/levelList"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:divider="@color/list_divider"
            android:listSelector="@drawable/listselect_btn"
            android:scrollbars="@null" >
        </ListView>
    </LinearLayout>
    <View android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/devider"/>
    <LinearLayout
        android:id="@+id/editorlay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/canser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:text="重置"
            android:textColor="#3e8ff2"
            android:textSize="14sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#3e8ff2" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:text="确定"
            android:textColor="#3e8ff2"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:id="@+id/bottom_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/translucence" />

</LinearLayout>