<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@drawable/dialog_sharp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="温馨提示"
        android:textColor="@color/light_yellow"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@color/top_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp" >
        <TextView
            android:id="@+id/contentTiltle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="更新内容："
            android:textColor="@color/top_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:text="您尚未注册帐号,请先注册再进行登录!"
            android:maxLines="10"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置为默认科室每日督导就不用再选择科室了。也可以在我的--帐号设置里面修改默认科室。)"
            android:textColor="@color/list_content"
            android:visibility="gone"
            android:textSize="14sp" />
         <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancleBtn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:text="取消"
            android:textColor="@color/top_color"
            android:background="@drawable/big_round_blue_type_style"
            android:layout_weight="1" />

        <Button
            android:id="@+id/enterBtn"
            android:layout_width="0dp"
            android:layout_height="44dp"
             android:textColor="@color/white"
            android:text="去注册"
            android:background="@drawable/addperson_btn"
            android:layout_marginLeft="20dp"
            android:layout_weight="1" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>