<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <RelativeLayout 
        android:id="@+id/lay_left"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="5dp"
          android:padding="10dp"
        android:background="@drawable/btn_shape_green_l"
          android:layout_width="0dp"
        android:layout_height="wrap_content"
		android:layout_weight="2"
        >
        <LinearLayout
        android:id="@+id/lay_button_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A"
			android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="15sp" />

        
        <TextView
            android:id="@+id/text_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:singleLine="true"
           android:textColor="@color/white"
            android:textSize="15sp" />
     
    </LinearLayout>
    </RelativeLayout>
    <EditText
        android:id="@+id/edt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content" 
        android:singleLine="true"
        android:layout_weight="3"
         android:padding="10dp"
         android:textSize="15sp" 
         android:layout_margin="5dp"
         android:layout_gravity="center_vertical"
        android:hint="@string/untime_hit_name"
        android:background="@drawable/btn_broad_gray"
        />
  
<com.deya.hospital.widget.view.DySpinner
     android:id="@+id/sp_sl"
	     android:layout_width="0dp"
        android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
		android:layout_marginRight="5dp"
         android:layout_weight="1.5"
    />
</LinearLayout>