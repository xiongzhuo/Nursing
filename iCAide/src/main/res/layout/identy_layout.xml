<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/pop4"
   
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="#fca258" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/allPost"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/second_supervisor_radio_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="全部"
            android:textColor="@color/bottom_text_selector" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <RadioButton
            android:id="@+id/notFeedBack"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/second_supervisor_radio_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:visibility="gone"
            android:text="未反馈"
            android:textColor="@color/bottom_text_selector" />
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="1" />


        <RadioButton
            android:id="@+id/zhuanzhi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/second_supervisor_radio_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="专职"
            android:textColor="@color/bottom_text_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
        android:id="@+id/jianzhi"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/second_supervisor_radio_selector"
        android:button="@null"
        android:gravity="center"
        android:padding="5dp"
        android:text="兼职"
        android:textColor="@color/bottom_text_selector" />
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="1" />
        <RadioButton
            android:id="@+id/radiobtn4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/second_supervisor_radio_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/bottom_text_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </RadioGroup>


  <View
        android:id="@+id/bottom_view5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/translucence" />

</LinearLayout>