<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/been"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#ffffff"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:visibility="gone"
        android:paddingBottom="@dimen/dp_10"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/dyshare"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:background="#ffffff"
        android:src="@drawable/gk_share" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="护理工作间"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/title_gray"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/qqshare"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_55"
            android:background="#ffffff"

            android:onClick="setShareContent()"
            android:src="@drawable/qq_share" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/title_gray"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/weixingshare"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:background="#ffffff"
            android:src="@drawable/wx_share" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/title_gray"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/weixingFshare"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_55"
            android:background="#ffffff"
            android:src="@drawable/circle_share" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朋友圈"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/title_gray"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>

</LinearLayout>