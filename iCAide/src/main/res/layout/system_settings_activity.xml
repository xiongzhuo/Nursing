<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >
        <com.deya.hospital.util.CommonTopView
        xmlns:commonTopView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/topView"
        android:layout_width="wrap_content"
        android:text="设置"
        commonTopView:showRight="false"
        android:layout_height="wrap_content">
    </com.deya.hospital.util.CommonTopView>

    
    <RelativeLayout
            android:id="@+id/accountSafety"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/listselect_btn"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="账号与安全"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_next_img" />

        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/devider"/>
    <com.deya.hospital.util.SimpleSwitchButton
        android:id="@+id/messegeSwitch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="12dp"
        android:text="仅wifi状态下上传任务"
        android:paddingLeft="5dp"
        android:background="@color/white"/>

    <Button
        android:id="@+id/login_out"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/listselect_btn"
        android:gravity="center"
        android:text="退出登录"
        android:visibility="gone"
        android:textColor="@color/blue"
        android:textSize="18sp" />

</LinearLayout>