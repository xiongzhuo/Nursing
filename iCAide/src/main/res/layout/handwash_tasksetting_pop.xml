<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:gravity="right"
    android:layout_marginTop="-10dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:alpha="0.80"
        android:src="@drawable/black_triangle" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/back_round_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tackphotoTv"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:minWidth="120dp"
            android:padding="10dp"
            android:text="拍照"
            android:drawableLeft="@drawable/tackpotoimg"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/localImgTv"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:drawableLeft="@drawable/localimges"
            android:minWidth="120dp"
            android:padding="10dp"
            android:text="现场反馈"
            android:onClick="localImg"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/recoderTv"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:minWidth="120dp"
            android:padding="10dp"
            android:text="录音"
            android:visibility="gone"
            android:drawableLeft="@drawable/recordimg"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/white" />

        <TextView
            android:id="@+id/newsHelper"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:minWidth="120dp"
            android:padding="10dp"
            android:text="新手帮助"
            android:visibility="gone"
            android:drawableLeft="@drawable/newshelpingimg"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/white" />

        <TextView
            android:id="@+id/setttings"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:minWidth="120dp"
            android:padding="10dp"
            android:text="手卫生设置"
            android:drawableLeft="@drawable/handsettingimg"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>