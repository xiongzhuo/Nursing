<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
     >

    
    <RelativeLayout
        android:id="@+id/pic_messageLay"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_centerVertical="true"
        
        android:layout_centerHorizontal="true"
         >

        <ImageView
            android:id="@+id/pic_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/xiaoxi_touxiang" />

        <TextView
            android:id="@+id/pic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/pic_img"
             android:text="感控助手"
            android:textColor="#181818"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pic_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pic_title"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="8dp"
            android:singleLine="true"
			android:ellipsize="end"
            android:layout_toRightOf="@id/pic_img"
            android:text=""
            android:textColor="@color/greytext"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:text="2015-09-17 18:25" 
            android:textColor="#bbbbbb"
            android:textSize="12dp"
            />
    </RelativeLayout>
  <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/devider" >
            </View>
            
    <RelativeLayout
        android:id="@+id/rel_message"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
         >

        <ImageView
            android:id="@+id/iamge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/xiaoxi_touxiang" />

        <TextView
            android:id="@+id/message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/iamge"
            android:text="护理工作间"
            android:textColor="#181818"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_title"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="8dp"
            android:singleLine="true"
			android:ellipsize="end"
            android:layout_toRightOf="@id/iamge"
            android:text=""
            android:textColor="@color/greytext"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:text="2015-09-17 18:25" 
            android:textColor="#bbbbbb"
            android:textSize="12dp"
            />
    </RelativeLayout>
</LinearLayout>