<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/NavPage">

    <com.im.sdk.dy.common.base.CCPClearEditText
        android:id="@+id/search_flite"
        style="@style/CCPLineEditText"
        android:layout_marginTop="@dimen/NormalPadding"
        android:background="@drawable/edittext_bg_selector"
        android:hint="@string/str_sear_group_id_hint"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:singleLine="true">

        <requestFocus />
    </com.im.sdk.dy.common.base.CCPClearEditText>
    <ListView
        android:id="@+id/searcha_result_lv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="0.0px"
        android:listSelector="@null"
        android:scrollbars="none"/>
    <TextView
        android:id="@+id/empty_search_tv"
        style="@style/CCPFontEmptyMsgLarge"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:singleLine="false"
        android:text="@string/main_empty_search_group"
        android:visibility="gone" />
</LinearLayout>