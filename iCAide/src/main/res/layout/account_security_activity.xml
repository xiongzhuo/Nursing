<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >


    <com.deya.hospital.util.CommonTopView
        xmlns:commonTopView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/topView"
        android:layout_width="wrap_content"
        android:text="账号与安全"
        commonTopView:showRight="false"
        android:layout_height="wrap_content">
    </com.deya.hospital.util.CommonTopView>


    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/topView"
        android:layout_marginTop="12dp"
        android:background="#efefef" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/view1"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rel_mobile"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/listselect_btn"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp" >

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="手 机"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mobile_phone_number"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/phone"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:text="000000000"
                android:textColor="@color/greytext"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#efefef" />

        <RelativeLayout
            android:id="@+id/rel_username"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/listselect_btn"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:visibility="gone"
            android:paddingRight="18dp" >

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="用户名"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/usernameTv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/username"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:text="000000000"
                android:textColor="@color/greytext"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/main_bg" />

        <RelativeLayout
            android:id="@+id/rel_email"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:visibility="gone"
            android:background="@drawable/listselect_btn"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="邮箱"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_next_img" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/imageView3"
                android:gravity="center_vertical"
                android:text="设置邮箱"
                android:layout_marginRight="10dp"
                android:textColor="@color/greytext"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#efefef" />

        <RelativeLayout
            android:id="@+id/rel_change_password"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/listselect_btn"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:layout_marginTop="12dp"
            android:paddingRight="18dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="修改密码"
                android:textColor="@color/black"
                android:textSize="16sp" />

    <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_next_img" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#efefef" />
        
        
          <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/listselect_btn"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:paddingLeft="18dp"
              android:visibility="gone"
            android:paddingRight="18dp" >

            <EditText
                android:id="@+id/text_vsitor"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:hint="填写邀请码"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="16sp" />
             <Button
                android:id="@+id/btn_set_visitor"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                 android:layout_alignParentRight="true"
                 android:layout_centerInParent="true"
                android:background="@drawable/roundbg_btn"
                android:text="确认"
                android:textColor="#F8F8FF"
                android:textSize="15sp" />
        </LinearLayout>
          <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#efefef" />
    </LinearLayout>

</RelativeLayout>