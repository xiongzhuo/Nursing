<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listselect_btn"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/fl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sp_16"
                    android:background="@drawable/bg_blue_sharp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_4"
                    android:visibility="gone"
                    android:maxLength="8"
                    android:text="咨询"
                    android:textColor="@color/top_color"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="标题"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/imgLay"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_below="@+id/fl_title"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgView1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_70"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/imgView2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/imgView3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_70"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgLay"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_2"
                    android:drawableLeft="@drawable/ic_read_count"
                    android:gravity="left|center_vertical"
                    android:text="20"
                    android:textColor="@color/content_black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="203"
                    android:textColor="@color/content_black"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_commont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="20"
                    android:textColor="@color/content_black"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_70"
            android:layout_margin="@dimen/dp_10"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/main_bg" />
</LinearLayout>