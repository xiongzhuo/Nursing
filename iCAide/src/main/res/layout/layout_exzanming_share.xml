<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_bg"
        />
    <ImageView
        android:id="@+id/exzamingState"
        android:layout_width="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="@dimen/dp_200" />

    <TextView
        android:id="@+id/tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_23"
            android:text="张美丽"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="恭喜您得到:"
                android:padding="5dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/totalScoreTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_23"
                android:text="80分"
                android:padding="5dp"
                android:textColor="@color/orange"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/devider"
            />
        <TextView
            android:id="@+id/useTimeTv"
            android:layout_width="wrap_content"
            android:padding="@dimen/dp_5"
            android:textColor="@color/list_content"
            android:layout_height="wrap_content" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/devider"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/rightNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:text="正确：4"
                android:padding="5dp"
                android:textColor="@color/green"/>
            <TextView
                android:id="@+id/wrongNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="20dp"
                android:text="错误5"
                android:padding="5dp"
                android:textColor="@color/orange"/>
            <Button
                android:id="@+id/moveBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/bg_blue_sharp"
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_3"
                android:layout_margin="@dimen/dp_3"
                android:textColor="@color/top_color"
                android:text="查看题目"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/devider"
            />
        <TextView
            android:id="@+id/submitTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:text="提交时间:2016-09-27"
            android:padding="5dp"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:textColor="@color/list_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/shareBtn"
        android:layout_width="wrap_content"
        android:drawableLeft="@drawable/share_docment"
        android:text="炫耀一下吧"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:drawablePadding="10dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/btn_round_sumbmit_bg"
        android:layout_height="@dimen/dp_48" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="@color/main_bg"/>
    <com.deya.hospital.util.SimpleSwitchButton
        android:id="@+id/showAll"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/list_title"
        android:textSize="14sp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"

        android:paddingRight="12dp"
        android:layout_marginBottom="1dp"
        android:text="显示全部"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/devider"/>

</LinearLayout>