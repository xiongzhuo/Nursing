<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10" >

    <LinearLayout
        android:id="@+id/leftView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/statelay"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toLeftOf="@+id/rt_rate"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_4"
            android:maxLines="3"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <!--
             <TextView
            android:id="@+id/yc_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/rt_rate"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/list_content"
            android:textSize="12sp" />
        -->

        <LinearLayout
            android:id="@+id/timeLay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >
<TextView
            android:id="@+id/typeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_3"
            android:text="手卫生"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/timeTypes"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/content_black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/finishtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_toLeftOf="@+id/rt_rate"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="10:40"
                android:textColor="@color/content_black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:maxLines="2"
                android:text="张医生"
                android:textColor="@color/content_black"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statelay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:orientation="vertical" >


        <ImageView
            android:id="@+id/stateImg"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
             />

        <TextView
            android:id="@+id/stateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="未完成"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/list_content" />
    </LinearLayout>

</RelativeLayout>
<View android:layout_width="fill_parent"
    android:layout_height="@dimen/dp_1"
    android:background="@color/devider"/>
</LinearLayout>