<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="@null">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:typeface="monospace"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tuijian2"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="30dp"
                    android:paddingTop="3dp"
                    android:text="发现问题"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/discover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/list_title"
                    android:textSize="14sp" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@color/white">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/big_round_blue_type_style"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="检查内容："
                        android:textColor="@color/top_color"
                        android:textSize="16sp" />


                    <EditText
                        android:id="@+id/checkContentEdt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint=""
                        android:minHeight="60dp"
                        android:padding="3dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <View
                        android:id="@+id/line2"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/devider" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="发现问题："
                        android:textColor="@color/top_color"
                        android:textSize="16sp" />



                    <EditText
                        android:id="@+id/problemEdt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint=""
                        android:minHeight="60dp"
                        android:padding="3dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <View
                        android:id="@+id/line3"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/devider" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="处理建议："
                        android:textColor="@color/top_color"
                        android:textSize="16sp" />


                    <EditText
                        android:id="@+id/sugesstEdt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint=""
                        android:minHeight="60dp"
                        android:padding="3dp"
                        android:text=""
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editorLay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.deya.hospital.util.SimpleSwitchButton
                    android:id="@+id/feedbackSwitch"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"></com.deya.hospital.util.SimpleSwitchButton>


                <com.deya.hospital.util.SimpleSwitchButton
                    android:id="@+id/reSupSwitch"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"></com.deya.hospital.util.SimpleSwitchButton>

                <RelativeLayout
                    android:id="@+id/timelay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/view1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:text="提醒时间:"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/timeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/view1"
                        android:gravity="center_vertical|right"
                        android:hint="点击设置提醒时间"
                        android:padding="3dp"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/detailEditorLay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tuijian2"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:paddingTop="3dp"
                        android:text="科室确认"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/departComformer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="被调查人  专职感控人员  2016-11-10"
                        android:textColor="@color/list_title"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reson_sugesstlay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/big_round_gray_type_style"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="原因分析与改进措施："
                        android:textColor="@color/top_color"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/devider" />

                    <EditText
                        android:id="@+id/reson_sugesstEdt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="start"
                        android:hint="请输入原因分析与改进措施"
                        android:minHeight="60dp"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tuijian2"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:paddingTop="3dp"
                        android:text="再次督导"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/resupvsionTimeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="2016-11-10"
                        android:textColor="@color/list_title"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/suggestlay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/big_round_gray_type_style"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="3dp"
                        android:paddingTop="10dp"
                        android:text="改进效果评价："
                        android:textColor="@color/top_color"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/devider" />

                    <EditText
                        android:id="@+id/sugesst_need_change_Edt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="start"
                        android:hint="请输入改进效果评价"
                        android:minHeight="60dp"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/imgLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="图片"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <com.deya.hospital.util.ScrollViewIncludeGridView
                    android:id="@+id/photoGv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:numColumns="3"></com.deya.hospital.util.ScrollViewIncludeGridView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recordLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_bg"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="语音"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <com.deya.hospital.util.ScrollViewIncludeListView
                    android:id="@+id/recordListView"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:background="@color/white"></com.deya.hospital.util.ScrollViewIncludeListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>