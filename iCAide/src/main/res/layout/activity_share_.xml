<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_e8ebf0"
    android:orientation="vertical" >

    <com.deya.hospital.util.CommonTopView
        xmlns:commonTopView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/topView"
        android:layout_width="wrap_content"
        android:text="推荐给好友"
        commonTopView:showRight="false"
        android:layout_height="wrap_content">
    </com.deya.hospital.util.CommonTopView>
    
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
           android:layout_marginTop="30dp"
           android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="您的邀请码："/>
         <TextView 
             android:id="@+id/visitorCode"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_yellow"
             android:textSize="17sp"
            android:text="1111"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/qrcod" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:textColor="@color/white"
            android:background="@drawable/share_method_bg"
            android:gravity="center"
            android:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="面对面推荐给好友，扫描二维码即可"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:textColor="@color/white"
            android:background="@drawable/share_method_bg"
            android:gravity="center"
            android:text="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="分享下载地址,推荐给好友"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:textColor="@color/white"
            android:background="@drawable/share_method_bg"
            android:gravity="center"
            android:text="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="好友注册后到我的主页-帐户与安全里面填写邀请码，可获得橄榄"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/yes"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="40dp"
        android:background="#4fdb69"
        android:gravity="center"
        android:text="推荐给好友"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>