<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nxad="http://schemas.android.com/apk/res-auto"
    style="@style/NavPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="12dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:paddingLeft="10dp" >

            <!--
                 <ImageView
                android:id="@+id/desc"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:contentDescription="desc" />
            -->

            <com.im.sdk.dy.common.view.RoundedImageView
                android:id="@+id/desc"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:scaleType="centerCrop"
                nxad:corner_radius="50dp"
                nxad:oval="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/desc"
                android:orientation="vertical" >

                <com.im.sdk.dy.ui.chatting.base.EmojiconTextView
                    android:id="@+id/contact_nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="16dp"
                    android:singleLine="true"
                    android:text="{name}"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/contact_numer"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="number"
                    android:textColor="@color/top_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:background="@color/line" />


        <RelativeLayout
            android:id="@+id/lay_remark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:padding="10dp" >

            <TextView
                android:id="@+id/text_remark_r"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="设置备注"
                android:textColor="@color/greytext"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_next_img" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/lay_addr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@android:color/white"
            android:padding="10dp" >

            <TextView
                android:id="@+id/text_addr_r"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="地区"
                android:textColor="@color/greytext"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_addr"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/text_addr_r"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="湖南 长沙"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/lay_hos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:padding="10dp" >

            <TextView
                android:id="@+id/text_hos_r"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="医院"
                android:textColor="@color/greytext"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_hos"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/text_hos_r"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="中南大小湘雅"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/lay_dep"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:padding="10dp" >

            <TextView
                android:id="@+id/text_dep_r"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="科室"
                android:textColor="@color/greytext"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_dep"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/text_dep_r"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="神经外科"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>


        <View
            android:id="@+id/view_line_1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/lay_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:padding="10dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/text_desc_r"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="描述"
                android:textColor="@color/greytext"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/text_desc_r"
                android:gravity="center_vertical"
                android:text="xxx"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_line_2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_enter"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_margin="20dp"
            android:background="@drawable/btn_round_sumbmit_bg"
            android:gravity="center"
            android:text="发消息"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</ScrollView>