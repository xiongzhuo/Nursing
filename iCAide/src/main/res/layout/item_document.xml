<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导读导读导读导读导读导读导读导读导读导读导读导读导读导读导读导读导读导读导读导读导读"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl_com"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/tv_title">

            <TextView
                android:id="@+id/tv_reader"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_read_count"
                android:gravity="center"
                android:text="342"
                android:textColor="@color/content_black"
                android:textSize="@dimen/HintTextSize" />

            <TextView
                android:id="@+id/tv_support"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_reader"
                android:gravity="center"
                android:text="23赞"
                android:textColor="@color/content_black"
                android:textSize="@dimen/HintTextSize" />

            <TextView
                android:id="@+id/tv_conment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_support"
                android:gravity="center"
                android:text="23评论"
                android:textColor="@color/content_black"
                android:textSize="@dimen/HintTextSize" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_title"
        android:background="@color/main_bg" />
</RelativeLayout>