<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:paddingLeft="20dp"
     >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        >

        <TextView
            android:id="@+id/ruleTv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/scoreNum"
            android:maxLines="2"
            android:text="3年175例案例，结论"
            android:textColor="@color/list_title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/scoreNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:text="50"
            android:layout_marginRight="10dp"
            android:textColor="@color/shop_yellow_text"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/intruduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="1111111111"
        android:textColor="@color/list_content"
        android:textSize="16sp" />
<View android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:background="@color/list_line"/>
</LinearLayout>