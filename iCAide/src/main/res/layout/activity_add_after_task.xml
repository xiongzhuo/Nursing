<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">
    <com.deya.hospital.util.CommonTopView
        android:id="@+id/topView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="预设任务" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务类型"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="18sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/taskTypeTv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/big_blue_radius_biankuang"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/job_down"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:hint="请选择预设任务类型"
            android:paddingRight="10dp"
            android:textColor="@color/top_color"
            android:textSize="16sp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:orientation="horizontal"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科室"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textSize="18sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/departTv"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/big_blue_radius_biankuang"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/job_down"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:hint="选择科室"
                android:paddingRight="10dp"
                android:textColor="@color/top_color"
                android:textSize="16sp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成时间"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/timeTv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/big_blue_radius_biankuang"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/job_down"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:hint="请选择完成时间"
            android:paddingRight="10dp"
            android:textColor="@color/top_color"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否重复"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/recycleTv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/big_blue_radius_biankuang"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/job_down"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:hint="请选择是否重复"
            android:paddingRight="10dp"
            android:textColor="@color/top_color"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提醒时间"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/remaindTv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/big_blue_radius_biankuang"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/job_down"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:hint="请选择提醒时间"
            android:paddingRight="10dp"
            android:textColor="@color/top_color"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_45"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:text="提\u3000交"
        android:background="@drawable/btn_round_sumbmit_bg"
        android:layout_margin="@dimen/dp_35"/>
</LinearLayout>