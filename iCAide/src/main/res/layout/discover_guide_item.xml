<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <com.deya.hospital.util.CircleImageView
        android:id="@+id/img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:src="@drawable/men_defult"
        android:layout_marginLeft="10dp"
        app:border_color="@color/white"
        app:border_width="1dp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img"
        android:minHeight="70dp"
        android:gravity="center"
        android:orientation="vertical"
           android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="20dp" >

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="医院消毒水泵房大开杀戒变电所看见"
            android:textColor="@color/list_title"
            android:textSize="15sp" >
        </TextView>

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:textColor="@color/list_content"
            android:textSize="12sp" >
        </TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/check_img"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/check_img"
        android:visibility="gone" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ll"
        android:layout_toRightOf="@+id/img"
        android:background="@color/devider" />

</RelativeLayout>