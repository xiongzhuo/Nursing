<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/listselect_btn"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toLeftOf="@+id/result"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/list_title"
            android:textSize="@dimen/sp_14" />

        <TextView
        android:id="@+id/method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
            android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/list_title"
        android:textSize="@dimen/sp_14" />
        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:gravity="right"
            android:layout_marginRight="10dp"

            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/list_title"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linelay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/result"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/indicationTv" 
            android:layout_width="fill_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:text="接触患者前、接触患者后"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/times"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/list_content"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/blue"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>