<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/new_main_bg"
    android:orientation="vertical" >

<FrameLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

       <com.deya.hospital.util.CommonTopView
        xmlns:commonTopView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/topView"
        android:layout_width="wrap_content"
        android:text="个人信息"
        commonTopView:showRight="false"
        commonTopView:righttext=""
        android:layout_height="wrap_content">
    </com.deya.hospital.util.CommonTopView>



        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="18dp"
            android:background="@color/devider" />


        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:orientation="vertical" >


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >


                    <TextView
                        android:id="@+id/nicheng"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="15dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center|right"
                        android:text="姓名"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/tv_nicheng"
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:layout_alignBottom="@+id/nicheng"
                        android:layout_marginRight="15dp"
                        android:layout_toRightOf="@+id/nicheng"
                        android:background="@null"
                        android:gravity="center|right"
                        android:hint="未填写"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textColor= "@color/color_333333"
                        android:textColorHint="@color/greytext"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/list_color" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/img_order2"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center|right"
                        android:text="邮箱"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/my_email"
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:layout_alignBottom="@+id/img_order2"
                        android:layout_marginRight="15dp"
                        android:layout_toRightOf="@+id/img_order2"
                        android:background="@null"
                        android:gravity="center|right"
                        android:hint="未填写"
                        android:singleLine="true"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/greytext"
                        android:textSize="16sp" />
                </RelativeLayout>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="18dp"
                    android:background="@color/list_color" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/img_order3"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center|right"
                        android:text="医院"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/my_hospital"
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:layout_alignBottom="@+id/img_order3"
                        android:layout_toLeftOf="@+id/image_hospital"
                        android:background="@null"
                        android:gravity="center|right"
                        android:singleLine="true"
                        android:hint="请选择医院"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/greytext"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/image_hospital"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/right_next_img" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/list_color" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >


                    <TextView
                        android:id="@+id/img_depart"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center|right"
                        android:text="岗位"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/departmentTv"
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:layout_alignBottom="@+id/img_depart"
                        android:layout_toLeftOf="@+id/image_right_next4"
                        android:background="@null"
                        android:gravity="center|right"
                        android:hint="选择岗位"
                        android:singleLine="true"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/greytext"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/image_right_next4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/right_next_img" />
                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/sectionLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical" >

 					<View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/list_color" />

                    <TextView
                        android:id="@+id/img_section"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center|right"
                        android:text="科室"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/sectionTv"
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:layout_alignBottom="@+id/img_section"
                        android:layout_toLeftOf="@+id/image_right_next5"
                        android:background="@null"
                        android:gravity="center|right"
                        android:hint="选择科室"
                        android:singleLine="true"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/greytext"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/image_right_next5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="1dp"
                        android:src="@drawable/right_next_img" />


                </RelativeLayout>



                <Button
                    android:id="@+id/reg_submit"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/sharp_but"
                    android:text="完成"
                    android:textColor="@color/white"
                    android:textSize="20sp" >
                </Button>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/frambg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#a0000000">
    </LinearLayout>
</FrameLayout>
</LinearLayout>