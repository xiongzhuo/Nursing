<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_checked="true">
             <shape>
                 <!-- 填充颜色 -->
			<solid android:color="@color/white"></solid>
		   		 <!-- 线的宽度，颜色灰色 -->
		  <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />
		    </shape>
        </item>
    <item android:state_checked="false">
        <shape>
            <!-- 填充颜色 -->
            <solid android:color="@color/main_bg"></solid>
            <!-- 线的宽度，颜色灰色 -->
            <corners android:radius="0dp"/>
        </shape>
    </item>
</selector>