<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
       <item android:state_pressed="true">
             <shape>
                 <!-- 填充颜色 -->
			<solid android:color="#2665b3"></solid>
		   		 <!-- 线的宽度，颜色灰色 -->
		   	<stroke android:width="0dp" android:color="#2665b3"></stroke> 
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="0dp" android:topLeftRadius="8dp" android:topRightRadius="0dp" /> 
		    </shape>
        </item>
           <item android:state_enabled="true">
             <shape>
                 <!-- 填充颜色 -->
			<solid android:color="#307ee0"></solid>
		   		 <!-- 线的宽度，颜色灰色 -->
		   	<stroke android:width="1dp" android:color="#307ee0"></stroke> 

            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="0dp" android:topLeftRadius="8dp" android:topRightRadius="0dp" />
		    </shape>
        </item>
       <item android:state_enabled="false">
             <shape>
                 <!-- 填充颜色 -->
			<solid android:color="#d7d7d7"></solid>
		   		 <!-- 线的宽度，颜色灰色 -->
		   	<stroke android:width="1dp" android:color="#d7d7d7"></stroke> 

            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="0dp" android:topLeftRadius="8dp" android:topRightRadius="0dp" />
		    </shape>
        </item>
        
</selector>