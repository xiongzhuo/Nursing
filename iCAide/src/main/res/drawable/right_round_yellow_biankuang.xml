<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

       <item android:state_pressed="true">
             <shape>
                 <!-- 填充颜色 -->
			<solid android:color="#d9d9d9"></solid>
		   		 <!-- 线的宽度，颜色灰色 -->
		   	<stroke android:width="1dp" android:color="#ff9c4b"></stroke> 
		  <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="8dp" android:topLeftRadius="0dp" android:topRightRadius="8dp" />   
		    </shape>
        </item>
        <item android:state_enabled="true">
             <shape>
                 <!-- 填充颜色 -->
			<solid android:color="@color/white"></solid>
		   		 <!-- 线的宽度，颜色灰色 -->
		   	<stroke android:width="1dp" android:color="#ff9c4b"></stroke> 
		  <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="8dp" android:topLeftRadius="0dp" android:topRightRadius="8dp" />   
		    </shape>
        </item>
         <item android:state_enabled="false">
             <shape>
                 <!-- 填充颜色 -->
			<solid android:color="@color/white"></solid>
		   		 <!-- 线的宽度，颜色灰色 -->
		   	<stroke android:width="1dp" android:color="#d7d7d7"></stroke> 
		  <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="8dp" android:topLeftRadius="0dp" android:topRightRadius="8dp" />   
		    </shape>
        </item>
</selector>