<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="1.0px"
    android:insetRight="1.0px" >

    <selector>
        <item android:state_enabled="false">
            <shape>
                 <!-- 填充颜色 -->
			<solid android:color="@color/main_bg"></solid>
		   		 <!-- 线的宽度，颜色灰色 -->
		   	<stroke android:width="1dp" android:color="@color/main_bg"></stroke>
		   	<corners android:radius="5dip" />      
		    </shape>
        </item>
        <item android:state_enabled="true">
            <shape>
                    <!-- 填充颜色 -->
			<solid android:color="@color/main_bg"></solid>
		   		 <!-- 线的宽度，颜色灰色 -->
		   	<stroke android:width="1dp" android:color="@color/devider"></stroke>
		   	<corners android:radius="5dip" />   
            </shape>
        </item>
    </selector>

</inset>