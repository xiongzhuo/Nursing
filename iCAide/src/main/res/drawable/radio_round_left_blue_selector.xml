<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
       <item android:state_checked="true">
             <shape>
                 <!-- 填充颜色 -->
			<solid android:color="@color/top_color"></solid>
		   		 <!-- 线的宽度，颜色灰色 -->
		   	<stroke android:width="0dp" android:color="@color/top_color"></stroke>
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="0dp" android:topLeftRadius="5dp" android:topRightRadius="0dp" /> 
		    </shape>
        </item>
           <item android:state_checked="false">
             <shape>
                 <!-- 填充颜色 -->
			<solid android:color="@color/white"></solid>
		   		 <!-- 线的宽度，颜色灰色 -->
		   	<stroke android:width="0dp" android:color="@color/white"></stroke>

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="0dp" android:topLeftRadius="5dp" android:topRightRadius="0dp" />
		    </shape>
        </item>
       <item android:state_enabled="false">
             <shape>
                 <!-- 填充颜色 -->
			<solid android:color="#d7d7d7"></solid>
		   		 <!-- 线的宽度，颜色灰色 -->
		   	<stroke android:width="1dp" android:color="#d7d7d7"></stroke> 

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="0dp" android:topLeftRadius="5dp" android:topRightRadius="0dp" />
		    </shape>
        </item>
        
</selector>