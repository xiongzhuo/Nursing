<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="1.0px"
    android:insetRight="1.0px" >

    <item android:state_enabled="false">
        <shape android:shape="rectangle" >
            <!-- 填充的颜色 -->
            <solid android:color="@color/white"></solid>
            <stroke android:width="1dp" android:color="@color/gray"></stroke>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="50dip" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_yellow"></solid>
            <stroke android:width="1dp" android:color="@color/white"></stroke>
            <corners android:radius="50dip" />
        </shape>
    </item>
</selector>