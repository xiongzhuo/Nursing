<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="1.0px"
    android:insetRight="1.0px" >

    <selector>
        <item android:state_selected="false">
            <shape>
                 <!-- 填充颜色 -->
			<solid android:color="@color/lightblue2"></solid>
		   		 <!-- 线的宽度，颜色灰色 -->
		   	<stroke android:width="0px" android:color="@color/gray"></stroke>  
		   	<corners android:radius="45.0dip" />      
		    </shape>
        </item>
    </selector>
  <selector>
        <item android:state_selected="true">
            <shape>
                 <!-- 填充颜色 -->
			<solid android:color="@color/lightblue2"></solid>
		   		 <!-- 线的宽度，颜色灰色 -->
		   	<stroke android:width="0px" android:color="@color/gray"></stroke>  
		   	<corners android:radius="45.0dip" />      
		    </shape>
        </item>
    </selector>
</inset>